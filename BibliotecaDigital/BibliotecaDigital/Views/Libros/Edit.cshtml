@model BibliotecaDigital.Models.Libro

<h2>Editar Libro</h2>

<form method="post">
    <input type="hidden" asp-for="IdLibro"> <!-- Se mantiene el ID -->

    <label>Título:</label>
    <input type="text" asp-for="Titulo" class="form-control" required>

    <label>Autor:</label>
    <input type="text" asp-for="Autor" class="form-control" required>

    <label>Género:</label>
    <input type="text" asp-for="Genero" class="form-control" required>

    <label>Sinopsis:</label>
    <textarea asp-for="Sinopsis" class="form-control"></textarea>

    <label>Portada URL:</label>
    <input type="text" asp-for="Portada_URL" class="form-control" required>

    <button type="submit" class="btn btn-primary mt-3">Actualizar Libro</button>
</form>