@model List<BibliotecaDigital.Models.Libro>

@{
    ViewData["Title"] = "Top Lecturas";
}
<style>
    .img-ajustada {
        width: 100%; 
        height: 250px;
        object-fit: contain; /* 🔹 Evita cortes mostrando toda la imagen */
        background-color: #f8f9fa;
        border-radius: 5px; 
    }
</style>

<h2 class="text-center mt-4">🏆 Top Lecturas</h2>

<div class="container">
    <div class="row justify-content-center">
        @foreach (var libro in Model)
        {
            var indice = Model.IndexOf(libro) + 1;
            var medalla = indice == 1 ? "🥇" : indice == 2 ? "🥈" : indice == 3 ? "🥉" : "📖";

            <div class="col-md-6 mb-4">
                <div class="card shadow">
                    <img src="@libro.Portada_URL" class="card-img-top img-ajustada" alt="@libro.Titulo">
                    <div class="card-body">
                        <h5 class="card-title">@medalla @libro.Titulo</h5>
                        <p class="card-text"><strong>Autor:</strong> @libro.Autor</p>
                        <p class="card-text"><strong>Género:</strong> @libro.Genero</p>
                        <p class="card-text"><strong>Promedio:</strong> @libro.PromedioCalificacion ⭐</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>